@model Movie

<div class="row">
    <div class="col-md-3">
         @* @await Html.PartialAsync("_menu" , Model.Categories) *@
         @* <partial name="_menu" , model="Model.Categories" />  *@
         @await Component.InvokeAsync("CategoryMenu")
 
    </div>
    
    <div class="col-md-9">
        <div class="card mb-3">

            <div class="card-body">
                <div class="row no-gutter">       
                    <div class="col-md-4">
                <img src="~/img/@Model.ImageUrl" class="card-img" alt="@Model.Description">
                    </div>

            <div class="col-md-8">

                <h5 class="card-title">
                <a asp-action="Detail" asp-controller="Home" asp-route-id="@Model.Id"> @Model.Name </a>   
                </h5>   
                <p class="card-text">@Model.Description</p>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
        </div>
    </div>
    </div>
    </div>
</div>
</div>