@model IEnumerable<Movie>

@foreach (var item in Model)
{
<div class="card mb-3" >
  <div class="row no-gutters">
    <div class="col-md-3">
      <img src="~/img/@item.ImageUrl" class="card-img" alt="@item.ShortDescription">
    </div>
    <div class="col-md-9">
      <div class="card-body">
        <h5 class="card-title">
          <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id"> @item.Name </a>   
        </h5>   
        <p class="card-text">@item.ShortDescription</p>
        <p class="card-text"><small class="text-muted">Updated 3 mins ago</small></p>
      </div>
    </div>
  </div>
</div>
}

